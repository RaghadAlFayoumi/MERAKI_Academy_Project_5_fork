{
  "compilerOptions": {
    "module": "commonjs",          
    "target": "esnext",
    "types": ["node", "express"],
    "typeRoots": ["./types", "./node_modules/@types"],             
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
